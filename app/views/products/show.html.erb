<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
        <div class="">
          <%= form_for [@product, @review] do |f| %>
          <%= f.text_area :description %>
          <%= f.select :rating, options_for_select(0..5), { prompt: "Rating" } %>
          <%= f.hidden_field :product_id, value: @product.id %>
          <%= f.submit %>
          <% end %>
        </div>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
          <dt>Average Rating</dt>
          <dd><%= @rating_avg.round(2) || 'No ratings' %></dd>
        </dl>

          <!-- Only show most recent 3 reviews that have descriptions -->
      <% reviews_with_descr = @reviews.select { |review| review.description != '' } %>
        <% reviews_with_descr.last(3).reverse.each do |r| %>
          <div class="panel panel-info">
            <div class="panel-heading">
              <span class='rating-user'>
                 <b><%= r.user.first_name %></b>
              </span>
              <!--  Stars for ratings  -->
              <% (0..r.rating-1).each do %>
              <span class="glyphicon glyphicon-star" style="color: #ffbf00"></span>
              <% end %>
              <% (r.rating..4).each do %>
              <span class="glyphicon glyphicon-star-empty" style="color: #ffbf00"></span>
              <% end %>
              <span style="float: right"> Posted on: <%= r.updated_at.strftime('%v') %> </span>
            </div>
            <div class="panel-body"><%= r.description %></div>
          </div>
        <% end %>
      </div>
    </div>
  </article>
</section>
